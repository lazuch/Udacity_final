<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lazuch.sketchupintro.act4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/geo_topic"
        android:textSize="@dimen/topic_text"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/geo"
        android:id="@+id/textView41"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView41"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/geo" />


    <ImageButton
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:foreground="@drawable/next3d"
        android:onClick="clickNext" />

    <ImageButton
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:foreground="@drawable/prev3d"
        android:onClick="clickPrev" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/imageButtonHome"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:foreground="@drawable/home"
        android:onClick="clickHome" />

</RelativeLayout>
